package geometria;

public class Triangulo {
	public double x;
	public double y;
	public double z;

	public boolean validar() {
		if (Math.abs(x - y) < z && z < (x + y)) {
			return true;
		} else {
			return false;
		}
	}

	public String classificar() {
		String tipo;

		if (x == y && y == z)
			tipo = "equilátero";
		else if (x == y || x == z || y == z)
			tipo = "isóceres";
		else
			tipo = "escaleno";
	}

}
